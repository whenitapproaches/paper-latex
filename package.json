{
  "name": "paper-latex-4",
  "version": "0.0.1",
  "author": "whenitapproaches",
  "scripts": {
    "serve": "vite preview",
    "build": "vite build",
    "app:build": "export CSC_IDENTITY_AUTO_DISCOVERY=false && yarn build:for:electron && yarn electron:builder",
    "build:for:electron": "cross-env ELECTRON=true vite build",
    "dev": "vite",
    "electron": "wait-on tcp:3000 && cross-env IS_DEV=true electron .",
    "electron:builder": "electron-builder",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn electron\"",
    "electron:pack": "electron-builder --dir",
    "i18n:report": "vue-cli-service i18n:report --src \"./src/**/*.?(js|vue)\" --locales \"./src/locales/**/*.json\"",
    "preview": "vite preview"
  },
  "main": "src/background.js",
  "dependencies": {
    "@headlessui/vue": "^1.4.2",
    "@heroicons/vue": "^1.0.5",
    "axios": "^0.24.0",
    "lodash": "^4.17.21",
    "monaco-editor": "^0.31.1",
    "monaco-editor-textmate": "^3.0.0",
    "monaco-textmate": "^3.0.1",
    "mv": "^2.1.1",
    "nanoid": "^3.3.1",
    "onigasm": "^2.2.5",
    "tailwindcss": "^3.0.12",
    "unzipper": "^0.10.11",
    "vitejs-plugin-electron": "^1.3.0",
    "vue": "^3.2.25",
    "vue-i18n": "^9.1.0",
    "vue-router": "4",
    "vuex": "^4.0.2",
    "yazl": "^2.5.1"
  },
  "devDependencies": {
    "@intlify/vite-plugin-vue-i18n": "^3.2.1",
    "@intlify/vue-i18n-loader": "^3.0.0",
    "@vitejs/plugin-vue": "^2.0.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron": "^16.0.6",
    "electron-builder": "^22.14.5",
    "electron-devtools-installer": "^3.1.0",
    "postcss": "^8.4.5",
    "rollup-plugin-copy": "^3.4.0",
    "vite": "^2.7.2",
    "vite-plugin-fast-external": "^1.4.8",
    "vue-cli-plugin-electron-builder": "~2.1.1",
    "vue-cli-plugin-i18n": "~2.3.1",
    "wait-on": "^6.0.0"
  },
  "build": {
    "appId": "com.paper-latex",
    "productName": "PaperLatex",
    "copyright": "Copyright Â© 2022 ${author}",
    "mac": {
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "src/**/*"
    ],
    "extraFiles": [
      {
        "from": "public",
        "to": "MacOS/public"
      }
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist_electron"
    }
  }
}
